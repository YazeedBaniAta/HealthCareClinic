@model FirstProject.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
    ViewData["AdminId"] = ViewBag.AdminId;
    ViewData["AdminName"] = ViewBag.AdminName;
    ViewData["AdminIamge"] = ViewBag.AdminIamge;
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="pagetitle">
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a asp-controller="AdminDashboard" asp-action="Index">Home</a></li>
          <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Appointments">Appointments</a></li>
          <li class="breadcrumb-item active">Appointment Details</li>
        </ol>
      </nav>
</div><!-- End Page Title -->



<div class="clearfix"></div>
	 <div class="row">
        <div class="col-md-12 mb-30">
            <div class="card card-statistics h-100">
                <div class="card-body">
                    <div class="tab nav-border">
                        <ul class="nav nav-tabs py-3" role="tablist">
                            <li class="nav-item">
                                <button class="nav-link active show btn btn-sm btn-primary" id="home-02-tab" data-toggle="tab" href="#home-02"
                                   role="tab" aria-controls="home-02"
                                   aria-selected="true">Doctor details</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link btn btn-sm btn-primary" id="profile-02-tab" data-toggle="tab" href="#profile-02"
                                   role="tab" aria-controls="profile-02"
                                   aria-selected="false">Patient details</button>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade active show" id="home-02" role="tabpanel"
                                 aria-labelledby="home-02-tab">
                                <table class="table table-striped table-hover" style="text-align:center">
                                    <tbody>
                                    <tr>
                                        <th scope="row">First Name</th>
                                        <td class="text-primary font-weight-bold">"Dr-@Html.DisplayFor(model => model.Doctor.FirstName) "</td>
                                        <th scope="row">Last Name</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Doctor.LastName) "</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Phone</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Doctor.Phone) "</td>
                                        <th scope="row">Birth Of Date</th>
                                        <td class="text-primary font-weight-bold">"  @Html.DisplayFor(model => model.Doctor.Bod) "</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Clinic</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Department.Name) "</td>
                                        <th scope="row">Specialization</th>
                                        <td class="text-primary font-weight-bold">" @ViewBag.DocInfo.Specialization.Name "</td>
                                    </tr>
                                    <tr>
                                         <th scope="row">Address</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Doctor.Address) "</td>
                                        <th scope="row">Salary</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Doctor.Salary) "</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- This code to display images -->
                            <div class="tab-pane fade" id="profile-02" role="tabpanel" aria-labelledby="profile-02-tab">
                                <br>
                                <table class="table table-striped table-hover" style="text-align:center">
                                    <tbody>
                                    <tr>
                                        <th scope="row">First Name</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Patient.FirstName) "</td>
                                        <th scope="row">Last Name</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Patient.LastName) "</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Phone</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Patient.Phone) "</td>
                                        <th scope="row">Birth Of Date</th>
                                        <td class="text-primary font-weight-bold">"  @Html.DisplayFor(model => model.Patient.Bod) "</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Clinic</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Patient.Gender) "</td>
                                        <th scope="row">Patient Address</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Patient.Address) "</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /End This code to display images -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>  

