@{
    ViewData["Title"] = "Services";
	//For Session
	ViewData["PatientId"] = ViewBag.PatientId;
	ViewData["PatientName"] = ViewBag.PatientName;

	ViewData["siteName"] = ViewBag.siteName;
    ViewData["siteAddress"] = ViewBag.siteAddress;
	ViewData["siteEmail"] = ViewBag.siteEmail;
	ViewData["siteLogo"] = ViewBag.siteLogo;
	ViewData["EmaegencyCase"] = ViewBag.EmaegencyCase;
}



<section class="page-title bg-1">
  <div class="overlay"></div>
  <div class="container" data-aos="fade-down">
    <div class="row">
      <div class="col-md-12">
        <div class="block text-center">
          <span class="text-white">Our services</span>
          <h1 class="text-capitalize mb-5 text-lg">What We Do</h1>
        </div>
      </div>
    </div>
  </div>
</section>


<section class="section service-2">
	<div class="container" data-aos="fade-down">
		<div class="row">
			@foreach(var serv in ViewBag.itemService)
			{
				<div class="col-lg-4 col-md-6 col-sm-6">
					<div class="service-block mb-5">
						<img src="~/Attachments/ServiceAttachments/@serv.ImagePath" alt="" class="img-fluid">
						<div class="content">
							<h4 class="mt-4 mb-2 title-color">@serv.Title</h4>
							<p class="mb-4">@serv.Description</p>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>

<section class="section cta-page">
	<div class="container" data-aos="fade-down">
		<div class="row">
			<div class="col-lg-7">
				<div class="cta-content">
					<div class="divider mb-4"></div>
					<h2 class="mb-5 text-lg">We are pleased to offer you the <span class="title-color">chance to have the healthy</span></h2>
					<a asp-controller="Home" asp-action="Appoinment" class="btn btn-main-2 btn-round-full">Get appoinment<i class="icofont-simple-right  ml-2"></i></a>
				</div>
			</div>
		</div>
	</div>
</section>
