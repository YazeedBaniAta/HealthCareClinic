@model FirstProject.Models.User

@{
    ViewData["Title"] = "User Details";
    ViewData["AdminId"] = ViewBag.AdminId;
    ViewData["AdminName"] = ViewBag.AdminName;
    ViewData["AdminIamge"] = ViewBag.AdminIamge;
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="pagetitle">
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a asp-controller="AdminDashboard" asp-action="Index">Home</a></li>
          <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Users">Users</a></li>
          <li class="breadcrumb-item active">User Detail</li>
        </ol>
      </nav>
</div><!-- End Page Title -->


<!-- row -->
@if(@Model.Role.Id == 1)
{
<div class="row">
        <div class="col-md-12 mb-30">
            <div class="card card-statistics h-100">
                <div class="card-body">
                    <div class="tab nav-border">
                        <ul class="nav nav-tabs mb-4" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active show font-weight-bold " id="home-02-tab" data-toggle="tab" href="#home-02"
                                   role="tab" aria-controls="home-02"
                                   aria-selected="true">Admin details</a>
                            </li>
                            <li class="nav-item font-weight-bold ">
                                <a class="nav-link" id="profile-02-tab" data-toggle="tab" href="#profile-02"
                                   role="tab" aria-controls="profile-02"
                                   aria-selected="false">Attachments</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade active show" id="home-02" role="tabpanel"
                                 aria-labelledby="home-02-tab">
                                <table class="table table-striped table-hover" style="text-align:center">
                                    <tbody>
                                    <tr>
                                        <th scope="row">User Name</th>
                                        <td class="text-primary font-weight-bold">"  @Html.DisplayFor(model => model.UserName) "</td>
                                        <th scope="row">position</th>
                                        <td class="text-primary font-weight-bold">"  @Html.DisplayFor(model => model.Role.Rolename) "</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">First Name</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Admin.FirstName) "</td>
                                        <th scope="row">Last Name</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Admin.LastName) "</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Phone</th>
                                        <td class="text-primary font-weight-bold">" @Html.DisplayFor(model => model.Admin.Phone) "</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>

                            <!-- This code to display images -->
                            <div class="tab-pane fade" id="profile-02" role="tabpanel" aria-labelledby="profile-02-tab">
                                <br>
                                <table class="table mt-2 center-aligned-table mb-0 table table-hover"
                                       style="text-align:center">
                                    <thead>
                                    <tr class="table-secondary">
                                        <th scope="col">#</th>
                                        <th scope="col">Image</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <tr style='text-align:center;vertical-align:middle'>
                                            <td>1</td>
                                            <td> <img class="img-fluid rounded-circle" src ="~/Attachments/AdminAttachments/@Html.DisplayFor(model => model.Admin.ImagePath)" alt="iamge" width=100 height=100/></td>                                            
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /End This code to display images -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
}
