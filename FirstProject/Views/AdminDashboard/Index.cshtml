
@{
    ViewData["Title"] = "Dashboard";
    //For Session
    ViewData["AdminId"] = ViewBag.AdminId;
    ViewData["AdminName"] = ViewBag.AdminName;
    ViewData["AdminIamge"] = ViewBag.AdminIamge;

    int counter = 1;
    int counter2 = 1;
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


            

            <div class="clearfix"></div>
            <div class="row py-5">
              <div class="col-md-12">
                <div class="">
                  <div class="x_content">
                    <div class="row">
                      <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                        <div class="tile-stats">
                          <div class="icon"><i class="fa fa-hospital-o"></i>
                          </div>
                          <div class="count counter-stat">
                              <span>@ViewBag.clinicsCount</span>
                              </div>
                          <h3 class="text-dark font-weight-bold" style="font-family: fantasy;"> No.of Clinics</h3>
                           <hr />
                          <p><a asp-action="Index" asp-controller="Departments" target="_blank" class="h6">See Details <i class="fa fa-long-arrow-right"></i></a></p>
                        </div>
                      </div>
                      <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                        <div class="tile-stats">
                          <div class="icon"><i class="fa fa-user-md"></i>
                          </div>
                          <div class="count">@ViewBag.doctorsCount</div>

                          <h3 class="text-dark font-weight-bold" style="font-family: fantasy;"> No.of Doctors</h3>
                           <hr />
                          <p><a asp-action="Index" asp-controller="Doctors" target="_blank" class="h6">See Details <i class="fa fa-long-arrow-right"></i></a></p>
                        </div>
                      </div>
                      <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                        <div class="tile-stats">
                          <div class="icon"><i class="fa fa-stethoscope"></i>
                          </div>
                          <div class="count">@ViewBag.patientsCount</div>

                          <h3 class="text-dark font-weight-bold" style="font-family: fantasy;">No.of Patients</h3>
                           <hr />
                          <p><a asp-action="Index" asp-controller="Patients" target="_blank" class="h6">See Details <i class="fa fa-long-arrow-right"></i></a></p>
                        </div>
                      </div>
                      <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                        <div class="tile-stats">
                          <div class="icon"><i class="fa fa-users"></i>
                          </div>
                          <div class="count">@ViewBag.usersCount</div>

                          <h3 class="text-dark font-weight-bold" style="font-family: fantasy;"> No.Of Users</h3>
                          <hr />
                          <p><a asp-action="Index" asp-controller="Users" target="_blank" class="h6">See Details <i class="fa fa-long-arrow-right"></i></a></p>
                        </div>
                      </div>
                    </div>
                </div>
            </div>      
         </div>
       </div>

        <!-- last process in system -->
   <div class="row">
        <div class="col-md-12 mb-30">
            <div class="card card-statistics h-100">
                <div class="card-body">
                    <p style="font-family: 'FontAwesome'" class="h2 text-dark font-weight-bold">Last 5 Processes on system</p>
                    <div class="tab nav-border">
                        <ul class="nav nav-tabs py-3" role="tablist">
                            <li class="nav-item">
                                <button class="nav-link active show btn btn-sm btn-primary" id="home-02-tab" data-toggle="tab" href="#home-02"
                                   role="tab" aria-controls="home-02"
                                   aria-selected="true">Patient</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link btn btn-sm btn-primary" id="profile-02-tab" data-toggle="tab" href="#profile-02"
                                   role="tab" aria-controls="profile-02"
                                   aria-selected="false">Appointments</button>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade active show" id="home-02" role="tabpanel"aria-labelledby="home-02-tab">
                      <table  class="table table-hover table-sm table-bordered p-0" style="width:100%;text-align: center">
                      <thead class="bg-dark text-white font-weight-bold">
                        <tr>
                           <th>#</th>
                          <th>patient Name</th>
                          <th>patient Email</th>
                          <th>patient Phone</th>
                          <th>patient Birth Of Date</th>
                        </tr>
                      </thead>
                      <tbody class="font-weight-bold">
                     @foreach (var item in ViewBag.Lastpatients) {
                           
                        <tr>
                          <td>@counter</td>
                          <td>@item.FirstName @item.LastName</td>
                          <td>@item.Email</td>
                          <td>@item.Phone</td>
                         <td>@item.Bod</td>
                       </tr>
                        counter++;
                       }
               
                      </tbody>
                    </table>
                            </div>
                            <!-- This code to display images -->
                            <div class="tab-pane fade" id="profile-02" role="tabpanel" aria-labelledby="profile-02-tab">
                                <br>
                     <table class="table table-hover table-sm table-bordered p-0" style="width:100%;text-align: center">
                      <thead class="bg-dark text-white font-weight-bold">
                        <tr>
                           <th>#</th>
                          <th>Patient Name</th>
                          <th>Doctor Name</th>
                          <th>Appointment Time</th>
                          <th>Appointment Date</th>
                        </tr>
                      </thead>
                      <tbody class="font-weight-bold">
                     @foreach (var item in ViewBag.Lastappointment) {
                           
                        <tr>
                          <td>@counter2</td>
                          <td>@item.Patient.FirstName @item.Patient.LastName</td>
                          <td>@item.Doctor.FirstName @item.Doctor.LastName</td>
                          <td>@item.AppointmentTime</td>
                         <td>@item.AppointmentDate</td>
                       </tr>
                        counter2++;
                       }
               
                      </tbody>
                    </table>
                            </div>
                            <!-- /End This code to display images -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
    <!-- /End last process in system -->


    <!-- calendar -->
            <div class="clearfix"></div>
            <div class="row py-4">
              <div class="col-md-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2 class="text-dark h4">Calendar </h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">

                    <div id='calendar'></div>

                  </div>
                </div>
              </div>
            </div>
        <!---calendar-->




    