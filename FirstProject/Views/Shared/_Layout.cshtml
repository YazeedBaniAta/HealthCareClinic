			<div class="row align-items-center">
				<div class="col-lg-6">
					<ul class="top-bar-info list-inline-item pl-0 mb-0">
						<li class="list-inline-item"><a href="mailto:@ViewBag.siteEmail"><i class="icofont-support-faq mr-2"></i>@ViewBag.siteEmail</a></li>
						<li class="list-inline-item"><i class="icofont-location-pin mr-2"></i>@ViewBag.siteAddress </li>
					</ul>
				</div>
				<div class="col-lg-6">
					<div style="margin-left:90%">
						@if(ViewBag.PatientId != null)
						{
							 <ul class="mt-2 navbar-right ml-auto">
								  <li class="nav-item dropdown open" style="list-style-type:none;">
									<a class="user-profile dropdown-toggle text-white" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false" style="cursor:pointer;"> 
