	 <script>
	 // Initialize and add the map
		 var map;
		function initMap(){
		  
		  // The map, centered at Uluru
		   map = new google.maps.Map(document.getElementById("map"),
		    {
			  zoom: 13,
			  center: { lat: 25.257320, lng: 55.307250 },
	        });

		//To Add marker
		  var marker = new google.maps.Marker({
			position: { lat: 25.257320, lng: 55.307250 },
			map: map,
			title: "Health care Clinic",
		  });

		  var infoWindow = new google.map.InfoWindow({
			  content:'<h1> Health care Clinic </h1>'
		  });

		  marker.addListener('click', function(){
			  infoWindow.open(map,marker);
		  });

		}
	 </script>

	 <!--- Google API -->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCQ1LMKJxNay6Ht87ZBNym86KdkG0JGaGg&callback=initMap" async defer></script>


