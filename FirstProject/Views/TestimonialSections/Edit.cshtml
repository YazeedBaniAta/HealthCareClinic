@model FirstProject.Models.TestimonialSection

@{
    ViewData["Title"] = "Edit Testimonial";
	ViewData["AdminId"] = ViewBag.AdminId;
    ViewData["AdminName"] = ViewBag.AdminName;
    ViewData["AdminIamge"] = ViewBag.AdminIamge;
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="pagetitle">
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a asp-controller="AdminDashboard" asp-action="Index">Home</a></li>
          <li class="breadcrumb-item"><a asp-action="Index" asp-controller="TestimonialSections">Testimonials</a></li>
          <li class="breadcrumb-item active">Edit Testimonial</li>
        </ol>
      </nav>
</div><!-- End Page Title -->

<div class="clearfix"></div>

					<div class="row">
						<div class="col-md-12 col-sm-12 ">
							<div class="card card-statistics h-100">
                <div class="card-body">
							<div class="x_panel">
								<div class="x_title">
									<h2>Edit Testimonial</h2>
									<ul class="nav navbar-right panel_toolbox">
										<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
										<li><a class="close-link"><i class="fa fa-close"></i></a></li>
									</ul>
									<div class="clearfix"></div>
								</div>
								<div class="x_content">
									<br />
									<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" asp-action="Edit">
										 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
										<input type="hidden" asp-for="Id" />
										 <div class="item form-group">
											<label class="text-dark font-weight-bold col-md-3 col-sm-3 label-align">Subject <span class="text-danger">*</span></label>
											<div class="col-md-6 col-sm-6 ">
												<input asp-for="Subject" class="form-control" disabled>
												<input asp-for="Subject" class="form-control" hidden>
												<span asp-validation-for="Subject" class="text-danger"></span>
											</div>
										</div>
										<div class="item form-group py-2">
											<label class="text-dark font-weight-bold col-md-3 col-sm-3 label-align">Description <span class="text-danger">*</span></label>
											<div class="col-md-6 col-sm-6 ">
												<textarea asp-for="Description" class="form-control" disabled></textarea>
												<textarea asp-for="Description" class="form-control" hidden></textarea>
												<span asp-validation-for="Description" class="text-danger"></span>
											</div>
										</div>
                                        <div class="item form-group py-2">
											<label class="text-dark font-weight-bold col-md-3 col-sm-3 label-align">Patient Name <span class="text-danger">*</span></label>
											<div class="col-md-6 col-sm-6 ">
												<select asp-for="PatientId" class ="form-control" asp-items="ViewBag.PatientId" disabled></select>
												<select asp-for="PatientId" class ="form-control" asp-items="ViewBag.PatientId" hidden></select>
												<span asp-validation-for="PatientId" class="text-danger"></span>
											</div>
										</div>
										<div class="item form-group py-2">
                                            <label class="text-dark font-weight-bold col-md-3 col-sm-3 label-align">Select Status : <span class="text-danger">*</span></label>
                                            <select class="form-control" asp-for="Status" required>
                                                
                                                @if(Model.Status == "1"){
                                                    <option selected disabled>approved</option>
                                                }
                                                @if(Model.Status == "0"){
                                                    <option selected disabled>pending request</option>
                                                }
                                                @if(Model.Status == "-1"){
                                                    <option selected disabled>rejected</option>
                                                }
                                                <option value="1">approved</option>
                                                <option value="0">pending request</option>
                                                <option value="-1">rejected</option>
                                            </select>
                                        </div>
										
						
										<div class="item form-group py-2">
											<div class="col-md-6 col-sm-6 offset-md-3">
												<input type="submit" class="btn btn-success text-white" value="Save Data">
												<button class="btn btn-primary" type="reset">Reset</button>
											</div>
										</div>

									</form>
								</div>
							</div>
						</div>
					</div>
					</div>
					</div>


